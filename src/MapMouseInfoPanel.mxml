<?xml version="1.0" encoding="utf-8"?>
<InfoPanel xmlns="*" 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	height="167" width="225" title="鼠标信息" titleStyleName="panelTitle"
	>
	
	<mx:Style>
		.panelTitle{
			color:#000000;
			font-weight:bold;
		}
	</mx:Style>
	
	<mx:Script>
		<![CDATA[
		
			[Bindable]
			private var _px:String;
			[Bindable]
			private var _py:String;
			[Bindable]
			private var _ix:String;
			[Bindable]
			private var _iy:String;
			
			//填充内容信息
			public function createContent(obj:Object):void{
				_px = obj.px + "";
				_py = obj.py + "";
				_ix = obj.ix + "";
				_iy = obj.iy + "";
			}
			
		]]>
	</mx:Script>
	<mx:Label x="10" y="10" text="像素坐标X：" color="0x000000"/>
	<mx:Text x="81.5" y="10" color="0x000000" text="{_px}"/>
	<mx:Text x="84.5" y="63" color="0x000000" text="{_ix}"/>
	<mx:Label x="10.5" y="39" text="像素坐标Y：" color="0x000000"/>
	<mx:Text x="82.5" y="39" color="0x000000" text="{_py}"/>
	<mx:Text x="84.5" y="89" color="0x000000" text="{_iy}"/>
	<mx:Label x="10" y="63" text="网格索引X：" color="0x000000"/>
	<mx:Label x="10" y="89" text="网格索引Y：" color="0x000000"/>
	
</InfoPanel>
